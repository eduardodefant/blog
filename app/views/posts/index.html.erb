<nav>
  <div class="nav-wrapper blue waves-light">
    <a href="#" class="brand-logo center">Blog</a>
    <ul id="nav-mobile" class="left hide-on-med-and-down">
    </ul>
  </div>
</nav>

<style>
  #col1 {
    width: 100%;
    float: right;
    height: 30%;
  }

  #col2 {
    width: 90%;
    float: right;
    align-content: right;
    height: 100%;
  }

  #linha {
    width: 100%;
    border-bottom: 1px solid #000000;
  }
</style>
<% @posts.limit(10).each do |post| %>
<div id="col1">
  <%=link_to(post.titulo, post) %>
  <% end %>
  <hr style=" transform: rotate(90deg); width: 100%; position: absolute; left: -540px; top: 700px; color: black">
</div>


<% @posts.limit(5).each do |post| %>
<div>
  <div id="col2" class="row">
    <div class="col s12 m6">
      <h5>
        <%=link_to(post.titulo, post) %>
      </h5>
      <div class="card blue-grey darken-1">

        <div class="card-content white-text">

          <span>
            <%= post.descricao %> </span>
          <%= truncate post.descricao, length: 160 %>
          <%=link_to("Ler mais", post) %> <br>
         <strong>Autor: </strong> <%= post.autor %> </span>

        </div>
        <div class="card-action">
          <a class="waves-effect waves-light btn" <%=link_to 'Editar' , edit_post_path(post) %></a></a>
          <a class="waves-effect waves-light btn" <%=link_to 'Excluir' , post, method: :delete, data: { confirm:
            'Tem certeza?' } %></a>

        </div>
      </div>
      <br>

    </div>
  </div>
</div>

<% end %>

<div class="row">
  <div class="col s12 m6">
    <a class="waves-effect waves-light btn" <%=link_to 'Nova Postagem' , new_post_path %></a>
  </div>
</div>